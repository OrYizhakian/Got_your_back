<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainScreenFragment">

    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="com.example.gis_test.ui.MainScreenFragment"
        android:label="main_screen_page"
        tools:layout="@layout/main_screen_page" >
        <action
            android:id="@+id/action_mainScreenFragment_to_loginPageFragment"
            app:destination="@id/loginPageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"
            app:popUpTo="@id/loginPageFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainScreenFragment_to_mapFragment2"
            app:destination="@id/mapFragment2"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left" />
    </fragment>

    <fragment
        android:id="@+id/loginPageFragment"
        android:name="com.example.gis_test.ui.LoginPageFragment"
        android:label="login_page"
        tools:layout="@layout/login_page" >
        <action
            android:id="@+id/action_loginPageFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/from_bottom"
            app:exitAnim="@anim/to_top"
            app:popEnterAnim="@anim/from_top"
            app:popExitAnim="@anim/to_bottom" />
        <action
            android:id="@+id/action_loginPageFragment_to_myBusinessesFragment"
            app:destination="@id/myBusinessesFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.gis_test.ui.UserSignUpFragment"
        android:label="signup_page"
        tools:layout="@layout/signup_page" >
        <action
            android:id="@+id/action_signUpFragment_to_secondSignUpFragment"
            app:destination="@id/secondSignUpFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>

    <fragment
        android:id="@+id/secondSignUpFragment"
        android:name="com.example.gis_test.ui.SecondSignUpFragment"
        android:label="signup_sec_page"
        tools:layout="@layout/business_signup_page" >
        <action
            android:id="@+id/action_secondSignUpFragment_to_loginPageFragment"
            app:destination="@id/loginPageFragment"
            app:enterAnim="@anim/to_top"
            app:exitAnim="@anim/from_bottom"
            app:popUpTo="@id/mainScreenFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment2"
        android:name="com.example.gis_test.ui.MapFragment"
        android:label="mapview"
        tools:layout="@layout/mapview" />

    <fragment
        android:id="@+id/myBusinessesFragment"
        android:name="com.example.gis_test.ui.MyBusinessesFragment"
        android:label="MyBusinessesFragment" >
        <action
            android:id="@+id/action_myBusinessesFragment_to_mapFragment2"
            app:destination="@id/mapFragment2" />
        <action
            android:id="@+id/action_myBusinessesFragment_to_businessDetailsFragment"
            app:destination="@id/businessDetailsFragment" />
        <action
            android:id="@+id/action_myBusinessesFragment_to_addNewBusinessFragment"
            app:destination="@id/addNewBusinessFragment" />
        <action
            android:id="@+id/action_myBusinessesFragment_to_loginPageFragment"
            app:destination="@id/loginPageFragment"
            app:popUpTo="@id/loginPageFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/businessDetailsFragment"
        android:name="BusinessDetailsFragment"
        android:label="BusinessDetailsFragment" >
        <action
            android:id="@+id/action_businessDetailsFragment_to_businessUpdateFragment"
            app:destination="@id/businessUpdateFragment" />
    </fragment>

    <fragment
        android:id="@+id/addNewBusinessFragment"
        android:name="com.example.gis_test.ui.AddNewBusinessFragment"
        android:label="AddNewBusinessFragment" >
        <action
            android:id="@+id/action_addNewBusinessFragment_to_myBusinessesFragment"
            app:destination="@id/myBusinessesFragment"
            app:popUpTo="@id/myBusinessesFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/businessUpdateFragment"
        android:name="com.example.gis_test.ui.BusinessUpdateFragment"
        android:label="BusinessUpdateFragment" >
        <action
            android:id="@+id/action_businessUpdateFragment_to_businessDetailsFragment"
            app:destination="@id/businessDetailsFragment"
            app:popUpTo="@id/businessDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
